@page "/game/{Id:int}"

@using FreeToGameExplorer.Models
@using FreeToGameExplorer.Services
@inject IGameApiClient GameApiClient

<h2 data-testid="details-title">Game Details</h2>

@if (isLoading)
{
    <p>Loading game...</p>
}
else if (!string.IsNullOrEmpty(errorMessage))
{
    <p style="color:red">@errorMessage</p>
}
else if (game is null)
{
    <p>Game not found.</p>
}
else
{
    <div style="display:flex; gap:20px; margin-bottom:20px;"
         data-testid="details-main">

        <img src="@game.Thumbnail"
             alt="@game.Title"
             style="max-width:300px; border:1px solid #ddd;" />

        <div>
            <h3>@game.Title</h3>

            <p><strong>Genre:</strong> @game.Genre</p>
            <p><strong>Platform:</strong> @game.Platform</p>
            <p><strong>Release date:</strong> @game.ReleaseDate</p>
            <p><strong>Publisher:</strong> @game.Publisher</p>
            <p><strong>Developer:</strong> @game.Developer</p>

            @if (!string.IsNullOrWhiteSpace(game.GameUrl))
            {
                <p>
                    <a href="@game.GameUrl" target="_blank">
                        Official Game Page
                    </a>
                </p>
            }
        </div>
    </div>

    <h3>Description</h3>
    <p>@game.Description</p>

    @if (game.MinimumSystemRequirements is not null)
    {
        <h3>Minimum System Requirements</h3>
        <ul>
            @if (!string.IsNullOrWhiteSpace(game.MinimumSystemRequirements.Os))
            {
                <li><strong>OS:</strong> @game.MinimumSystemRequirements.Os</li>
            }
            @if (!string.IsNullOrWhiteSpace(game.MinimumSystemRequirements.Processor))
            {
                <li><strong>Processor:</strong> @game.MinimumSystemRequirements.Processor</li>
            }
            @if (!string.IsNullOrWhiteSpace(game.MinimumSystemRequirements.Memory))
            {
                <li><strong>Memory:</strong> @game.MinimumSystemRequirements.Memory</li>
            }
            @if (!string.IsNullOrWhiteSpace(game.MinimumSystemRequirements.Graphics))
            {
                <li><strong>Graphics:</strong> @game.MinimumSystemRequirements.Graphics</li>
            }
            @if (!string.IsNullOrWhiteSpace(game.MinimumSystemRequirements.Storage))
            {
                <li><strong>Storage:</strong> @game.MinimumSystemRequirements.Storage</li>
            }
        </ul>
    }

    @if (game.Screenshots?.Count > 0)
    {
        <h3>Screenshots</h3>
        <div style="display:flex; flex-wrap:wrap; gap:10px;">
            @foreach (var shot in game.Screenshots)
            {
                <a href = "@shot.Image" target="_blank">
                    <img src="@shot.Image"
                         alt="Screenshot"
                         style="width:250px; border:1px solid #ddd;" />
                </a>
            }
        </div>
    }

    <p style="margin-top:20px;">
        <NavLink href="">Back to list</NavLink>
    </p>
}

@code {
    [Parameter] public int Id { get; set; }

    private GameDetail? game;
    private bool isLoading = true;
    private string? errorMessage;

    protected override async Task OnParametersSetAsync()
    {
        isLoading = true;
        errorMessage = null;

        try
        {
            game = await GameApiClient.GetGameAsync(Id);

            if (game == null)
                errorMessage = "Game not found.";
        }
        catch (Exception ex)
        {
            errorMessage = "Could not load game details.";
            Console.WriteLine(ex);
        }
        finally
        {
            isLoading = false;
        }
    }
}
