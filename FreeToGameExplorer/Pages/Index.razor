@page "/"

@using FreeToGameExplorer.Models
@using System.Linq
@using FreeToGameExplorer.Services
@inject IGameApiClient GameApiClient

<h1>Free*To*Play Games Explorer</h1>
<h5>Not all games here are free of charge</h5>

<div style="margin-bottom: 20px;">
    <div>
        <label>Title: </label>
        <input @bind="titleFilter" data-testid="title-input" />
    </div>

    <div style="margin-top: 5px;">
        <label>Genre: </label>
        <select @bind="selectedGenre" data-testid="genre-select">
            @foreach (var g in genres)
            {
                <option value="@g">@g</option>
            }
        </select>
    </div>

    <div style="margin-top: 5px;">
        <label>Platform: </label>
        <select @bind="selectedPlatform" data-testid="platform-select">
            @foreach (var p in platforms)
            {
                <option value="@p">@p</option>
            }
        </select>
    </div>

    <div style="margin-top: 5px;">
        <label>Sort by: </label>
        <select @bind="selectedSort" data-testid="sort-select">
            @foreach (var s in sorts)
            {
                <option value="@s.Value">@s.Key</option>
            }
        </select>
    </div>

    <div style="margin-top: 10px;">
        <button class="btn btn-primary"
                @onclick="OnSearch"
                data-testid="search-button">
            Search
        </button>
    </div>

    @if (!string.IsNullOrEmpty(validationMessage))
    {
        <p class="validation-message" data-testid="validation-message">@validationMessage</p>
    }
</div>

@if (isLoading)
{
    <p>Loading games...</p>
}
else if (!string.IsNullOrEmpty(errorMessage))
{
    <p style="color:red">@errorMessage</p>
}
else if (games.Count == 0)
{
    <p>No games found for the selected filters.</p>
}
else
{
    <div style="display:flex; flex-wrap:wrap; gap:20px;">
        @foreach (var g in PagedGames)
        {
            <div class="game-card"
                 data-testid="game-card"
                 style="width:260px; border:1px solid #ccc; padding:10px;">

                <img src="@g.Thumbnail"
                     alt="@g.Title"
                     style="width:100%; height:140px; object-fit:cover;" />

                <h4 style="margin-top:10px;">@g.Title</h4>

                <p style="margin:0; font-size:0.9rem;">
                    <strong>Genre:</strong> @g.Genre
                </p>

                <p style="margin:0; font-size:0.9rem;">
                    <strong>Platform:</strong> @g.Platform
                </p>

                @if (!string.IsNullOrWhiteSpace(g.ReleaseDate))
                {
                    <p style="margin:0; font-size:0.9rem;">
                        <strong>Release:</strong> @g.ReleaseDate
                    </p>
                }

                <p style="margin-top:5px;">
                    <NavLink href="@($"/game/{g.Id}")"
                             data-testid="details-link">
                        View details
                    </NavLink>
                </p>
            </div>
        }
    </div>

    <!--paging here-->
    @if (TotalPages > 1)
    {
        <div style="margin-top:15px; display:flex; align-items:center; gap:10px;">
            <button class="btn btn-sm btn-secondary"
                    @onclick="PrevPage"
                    disabled="@IsFirstPage"
                    data-testid="prev-page">
                Previous   
            </button>

            <span>Page @currentPage of @TotalPages</span>

            <button class="btn btn-sm btn-secondary"
                    @onclick="NextPage"
                    disabled="@IsLastPage"
                    data-testid="next-page">
                Next -> 
            </button>
        </div>
    }

    <div class="genre-chart-card" data-testid="genre-chart-card">

        <h2>Games per genres (@GenreStats.Count())</h2>

        <div class="genre-chart">
            @foreach (var item in GenreStats)
            {
                var widthPercent = Math.Min(100, 10 + item.Count * 3);

                <div class="genre-row">

                    <span class="genre-label">@item.Genre (@item.Count)

                    </span>
                    <div class="genre-bar-container">

                        <div class="genre-bar" style="width:@($"{widthPercent}%")"></div>

                    </div>
                </div>
            }
        </div>
    </div>
}


@code {
    private bool isLoading = true;
    private string? errorMessage;

    private IReadOnlyList<GameSummary> games = Array.Empty<GameSummary>();

    private string titleFilter = string.Empty;
    private string selectedGenre = "All";
    private string selectedPlatform = "All";
    private string selectedSort = "";

    private List<string> genres = new() { "All" };
    private List<string> platforms = new() { "All" };
    private Dictionary<string, string> sorts = new()
    {
        { "None", "" },
        { "Release date", "release-date" },
        { "Alphabetical", "alphabetical" },
        { "Popularity", "popularity" }
    };

    private string? validationMessage;

    //pagging
    private int currentPage = 1;
    private const int PageSize = 9;

    private int TotalPages =>
        games.Count == 0 ? 1 : (int)Math.Ceiling(games.Count / (double)PageSize);

    private bool IsFirstPage => currentPage <= 1;
    private bool IsLastPage => currentPage >= TotalPages;

    private IEnumerable<GameSummary> PagedGames =>
        games.Skip((currentPage - 1) * PageSize).Take(PageSize);

    protected override async Task OnInitializedAsync()
    {
        await LoadGamesAsync();
    }

    private async Task OnSearch()
    {
        if (!string.IsNullOrWhiteSpace(titleFilter) && titleFilter.Trim().Length < 3)
        {
            validationMessage = "Title must be more than 3 characters long!!!";
            return;
        }

        validationMessage = null;
        currentPage = 1;   //reset???
        await LoadGamesAsync();
    }

    private async Task LoadGamesAsync()
    {
        isLoading = true;
        errorMessage = null;

        try
        {
            string? genreParam = selectedGenre == "All"
                ? null
                : selectedGenre.ToLowerInvariant();

            string? platformParam = selectedPlatform switch
            {
                "All" => null,
                "PC (Windows)" => "pc",
                "Web Browser" => "browser",
                _ => null
            };

            string? sortParam = string.IsNullOrEmpty(selectedSort) ? null : selectedSort;

            games = await GameApiClient.GetGamesAsync(
                titleFilter,
                genreParam,
                platformParam,
                sortParam);

            //reset when the data was changed
            currentPage = 1;

            if (genres.Count == 1 && games.Count > 0)
            {
                genres.AddRange(
                    games.Where(g => !string.IsNullOrWhiteSpace(g.Genre))
                         .Select(g => g.Genre)
                         .Distinct()
                         .OrderBy(g => g));
            }

            if (platforms.Count == 1 && games.Count > 0)
            {
                platforms.AddRange(
                    games.Where(g => !string.IsNullOrWhiteSpace(g.Platform))
                         .Select(g => g.Platform)
                         .Distinct()
                         .OrderBy(p => p));
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine(ex);
            errorMessage = "Error loading games.";
            games = Array.Empty<GameSummary>();
        }
        finally
        {
            isLoading = false;
        }
    }

    private void NextPage()
    {
        if (!IsLastPage)
        {
            currentPage++;
        }
    }

    private void PrevPage()
    {
        if (!IsFirstPage)
        {
            currentPage--;
        }
    }

    private IEnumerable<(string Genre, int Count)> GenreStats =>
        games
            .Where(g => !string.IsNullOrWhiteSpace(g.Genre))
            .GroupBy(g => g.Genre)
            .Select(g => (Genre: g.Key, Count: g.Count()))
            .OrderByDescending(x => x.Count);
}
